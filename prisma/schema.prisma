generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Task {
  id        String   @id @default(uuid())
  content   String
  createdAt DateTime @default(now())
  completed Boolean  @default(false)
}

model Task2 {
  id             String   @id @default(uuid())
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  userinput      String
  title          String
  description    String
  category       String
  generatedtasks Json
}
